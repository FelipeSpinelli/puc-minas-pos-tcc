@inherits LayoutComponentBase

<PageTitle>ArquiveSe.App</PageTitle>

<MudThemeProvider Theme="ArquiveSeTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Arquive-se</MudText>
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    MudTheme ArquiveSeTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = Colors.Blue.Default,
                Secondary = Colors.LightBlue.Accent4,
                AppbarBackground = Colors.Blue.Darken1,
            },
            PaletteDark = new PaletteDark()
            {
                Primary = Colors.Blue.Default,
                Secondary = Colors.LightBlue.Accent4,
                AppbarBackground = Colors.Blue.Darken1,
            }
        };
}